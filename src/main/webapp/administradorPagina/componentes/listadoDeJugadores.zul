<window title="Usuarios Registrados | Por Orden De Registro" sclass="margintabletittle borde sombra">
<zscript><![CDATA[

    public void mensaje() {
        //create a window programmatically and use it as a modal dialog.
        Window window = (Window)Executions.createComponents("/componentes/leerMensaje.zul", null, null);
        window.doModal();
    }
    
    public void modificar() {
        //create a window programmatically and use it as a modal dialog.
		Executions.sendRedirect("sesionModificarUsuario.zul");
    }


]]></zscript>
<div  apply="org.zkoss.bind.BindComposer"
		viewModel="@id('modelo') @init('quinielasocial.lab.controller.ControladorGridJugadores')">
		<grid visible="true" id="datosJugadores" mold="paging" pageSize="5"  pagingPosition="top"
			model="@load(modelo.obtenerJugadores)" >
			<columns menupopup="auto">
				<column width="180px" label="Nombre" />
				<column width="180px" label="Apellido" />
				<column width="180px" label="Correo" />
			    <column width="180px" label="Editar" />
				
			</columns>	
			<template name="model">
				<row>
					<a label="@load(each.nombre)" onClick="mensaje()"/>
					<a label="@load(each.apellido)" onClick="mensaje()"/>
					<label value="@load(each.correo)" />	
					<button label="Modificar" onClick="modificar()"/>				
				</row>	
			</template>
		</grid>
	</div>
</window>