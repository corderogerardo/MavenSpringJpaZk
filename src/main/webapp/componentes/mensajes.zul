                <button id="leer3" label="Leer" sclass="btn btn-sm button-0"/>
            </row>
            
            <row>
                <label value="Andreina Torres" />
				<label value="Cuando será el proximo juego?" />
                <button id="leer4" label="Leer" sclass="btn btn-sm button-0"/>
            </row>
            
            
		 </rows>
    </grid>
</div>
</window>
</zk>